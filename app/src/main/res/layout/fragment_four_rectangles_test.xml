<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/one_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:background="@color/green_200"
        app:layout_constraintBottom_toTopOf="@+id/tree_rectangle"

        app:layout_constraintEnd_toStartOf="@+id/two_rectangle"
        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/two_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/one_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/four_rectangle"

        android:background="@color/green_300"/>

    <View
        android:id="@+id/tree_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"


        app:layout_constraintEnd_toStartOf="@+id/four_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"


        android:background="@color/green_700"/>

    <View
        android:id="@+id/four_rectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tree_rectangle"
        app:layout_constraintTop_toBottomOf="@+id/two_rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/green_800"/>


</androidx.constraintlayout.widget.ConstraintLayout>